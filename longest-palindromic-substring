#include <string>
#include <iostream>
class Solution {
public:
    string longestPalindrome(string s) {
         int temp_len,left,right,mid,max_len=0,str_len=s.length();
        string max_str;
        for(int i=0;i<str_len;i++)
        {
            mid=i;
            temp_len=1;
            left=mid-1;
            while(s[mid]==s[mid+1])
            {
                mid++;
                temp_len++;
            }
            right=mid+1;
            while((left>=0&&right<str_len)&&((s[left]==s[right])))
            {
                left--;
                right++;
                temp_len+=2;
            }
            left++;
            right--;
            if(temp_len>max_len)
            {
                max_len=temp_len;
                max_str="";
                for(int j=left;j<=right;j++)
                {
                    max_str+=s[j];
                }
            }
        }
        return max_str;
    }
};
